# Server Configuration
PORT=3001
NODE_ENV=development
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/hermes

# Redis
REDIS_URL=redis://localhost:6379

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG_ID=your_openai_org_id

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=7d

# OAuth2 - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# OAuth2 - Microsoft
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret
OUTLOOK_CALLBACK_URL=http://localhost:3001/auth/outlook/callback

# OAuth2 - Yahoo
YAHOO_CLIENT_ID=your_yahoo_client_id
YAHOO_CLIENT_SECRET=your_yahoo_client_secret
YAHOO_CALLBACK_URL=http://localhost:3001/auth/yahoo/callback

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PRICE_ID=your_stripe_price_id

# Email Processing
EMAIL_BATCH_SIZE=50
EMAIL_PROCESSING_INTERVAL=300000
EMAIL_RETENTION_DEFAULT=180 # 6 months in days

# Vector Database
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Logging
LOG_LEVEL=debug
SENTRY_DSN=your_sentry_dsn

# Admin
ADMIN_EMAIL=admin@hermes.com
ADMIN_PASSWORD=your_secure_admin_password 